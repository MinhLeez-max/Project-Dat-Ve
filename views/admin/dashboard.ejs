<div class="container-fluid py-4">
  <div class="row">
    <div class="col-lg-2 mb-4">
      <!-- Admin Sidebar -->
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Bảng Điều Khiển</h5>
        </div>
        <div class="list-group list-group-flush">
          <a href="/admin/dashboard" class="list-group-item list-group-item-action active">
            <i class="fas fa-tachometer-alt me-2"></i> Tổng Quan
          </a>
          <a href="/admin/routes" class="list-group-item list-group-item-action">
            <i class="fas fa-route me-2"></i> Tuyến Đường
          </a>
          <a href="/admin/buses" class="list-group-item list-group-item-action">
            <i class="fas fa-bus me-2"></i> Xe Buýt
          </a>
          <a href="/admin/bookings" class="list-group-item list-group-item-action">
            <i class="fas fa-ticket-alt me-2"></i> Đặt Vé
          </a>
          <a href="/" class="list-group-item list-group-item-action">
            <i class="fas fa-home me-2"></i> Về Trang Chủ
          </a>
        </div>
      </div>
    </div>
    
    <div class="col-lg-10">
      <h2 class="mb-4">Trang Quản Trị</h2>
      
      <!-- Stats Cards -->
      <div class="row mb-4">
        <div class="col-md-3 mb-4">
          <div class="card dashboard-card bg-primary text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h6 class="text-white-50">Tổng Số Đặt Vé</h6>
                  <div class="stat-number"><%= stats.bookins %></div>
                </div>
                <div>
                  <i class="fas fa-ticket-alt fa-3x text-white-50"></i>
                </div>
              </div>
              <p class="mb-0 mt-2 small">
                <span class="me-2"><i class="fas fa-clock"></i> Hôm nay: <%= stats.todayBookings %></span>
                <span><i class="fas fa-exclamation-circle"></i> Đang xử lý: <%= stats.pendingBookings %></span>
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-md-3 mb-4">
          <div class="card dashboard-card bg-success text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h6 class="text-white-50">Tổng Doanh Thu</h6>
                  <div class="stat-number"><%= stats.totalRevenue.toLocaleString() %> đ</div>
                </div>
                <div>
                  <i class="fas fa-money-bill-wave fa-3x text-white-50"></i>
                </div>
              </div>
              <p class="mb-0 mt-2 small">
                <span><i class="fas fa-calendar-alt"></i> Tháng này: <%= stats.monthlyRevenue.toLocaleString() %> đ</span>
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-md-3 mb-4">
          <div class="card dashboard-card bg-info text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h6 class="text-white-50">Xe Buýt</h6>
                  <div class="stat-number"><%= stats.buses %></div>
                </div>
                <div>
                  <i class="fas fa-bus fa-3x text-white-50"></i>
                </div>
              </div>
              <p class="mb-0 mt-2 small">
                <span><i class="fas fa-route"></i> Tuyến đường: <%= stats.routes %></span>
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-md-3 mb-4">
          <div class="card dashboard-card bg-warning text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h6 class="text-white-50">Người Dùng Đã Đăng Ký</h6>
                  <div class="stat-number"><%= stats.users %></div>
                </div>
                <div>
                  <i class="fas fa-users fa-3x text-white-50"></i>
                </div>
              </div>
              <p class="mb-0 mt-2 small">
                <span><i class="fas fa-user-plus"></i> Người dùng hoạt động</span>
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Recent Bookings -->
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Đặt Vé Gần Đây</h5>
          <a href="/admin/bookings" class="btn btn-sm btn-primary">Xem Tất Cả</a>
        </div>
        <div class="card-body">
          <% if (recentBookings.length === 0) { %>
            <p class="text-center mb-0">Không tìm thấy đặt vé gần đây.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th>Mã Đặt Vé</th>
                    <th>Khách Hàng</th>
                    <th>Tuyến Đường</th>
                    <th>Ngày Khởi Hành</th>
                    <th>Số Ghế</th>
                    <th>Số Tiền</th>
                    <th>Trạng Thái</th>
                    <th>Hành Động</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentBookings.forEach(booking => { %>
                    <tr>
                      <td><span class="badge bg-secondary"><%= booking.bookingReference %></span></td>
                      <td><%= booking.user.name %></td>
                      <td><%= booking.bus.route.departureCity %> - <%= booking.bus.route.arrivalCity %></td>
                      <td><%= new Date(booking.journeyDate).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
                      <td><%= booking.seats ? booking.seats.length : 0 %></td>
                      <td><%= booking.totalAmount.toLocaleString() %> VND</td>
                      <td>
                        <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : 'warning' %>">
                          <%= booking.status.toUpperCase() %>
                        </span>
                      </td>
                      <td>
                        <a href="/admin/bookings/<%= booking._id %>" class="btn btn-sm btn-outline-primary">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
      
      <!-- Quick Actions -->
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-header">
              <h5 class="mb-0">Thao Tác Nhanh</h5>
            </div>
            <div class="card-body">
              <div class="d-grid gap-2">
                <a href="/admin/routes/add" class="btn btn-outline-primary">
                  <i class="fas fa-plus me-2"></i> Thêm Tuyến Đường Mới
                </a>
                <a href="/admin/buses/add" class="btn btn-outline-primary">
                  <i class="fas fa-plus me-2"></i> Thêm Xe Buýt Mới
                </a>
                <a href="/admin/bookings" class="btn btn-outline-primary">
                  <i class="fas fa-search me-2"></i> Xem Tất Cả Đặt Vé
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-8 mb-4">
          <div class="card h-100">
            <div class="card-header">
              <h5 class="mb-0">Thông Tin Hệ Thống</h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-borderless">
                  <tr>
                    <td width="30%"><strong>Môi Trường:</strong></td>
                    <td><%= process.env.NODE_ENV || 'development' %></td>
                  </tr>
                  <tr>
                    <td><strong>Phiên Bản Node.js:</strong></td>
                    <td><%= process.version %></td>
                  </tr>
                  <tr>
                    <td><strong>Thời Gian Hoạt Động:</strong></td>
                    <td>
                      <% 
                        const uptime = process.uptime();
                        const days = Math.floor(uptime / 86400);
                        const hours = Math.floor((uptime % 86400) / 3600);
                        const minutes = Math.floor((uptime % 3600) / 60);
                      %>
                      <%= days %> ngày, <%= hours %> giờ, <%= minutes %> phút
                    </td>
                  </tr>
                  <tr>
                    <td><strong>Bộ Nhớ Sử Dụng:</strong></td>
                    <td>
                      <% 
                        const memoryUsage = process.memoryUsage();
                        const mbUsed = Math.round(memoryUsage.rss / 1024 / 1024 * 100) / 100;
                      %>
                      <%= mbUsed %> MB
                    </td>
                  </tr>
                  <tr>
                    <td><strong>Thời Gian Hiện Tại:</strong></td>
                    <td><%= new Date().toLocaleString() %></td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
