<div class="container-fluid py-4">
  <div class="row">
    <div class="col-lg-2 mb-4">
      <!-- Admin Sidebar -->
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Admin Panel</h5>
        </div>
        <div class="list-group list-group-flush">
          <a href="/admin/dashboard" class="list-group-item list-group-item-action">
            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
          </a>
          <a href="/admin/routes" class="list-group-item list-group-item-action active">
            <i class="fas fa-route me-2"></i> Routes
          </a>
          <a href="/admin/buses" class="list-group-item list-group-item-action">
            <i class="fas fa-bus me-2"></i> Buses
          </a>
          <a href="/admin/bookings" class="list-group-item list-group-item-action">
            <i class="fas fa-ticket-alt me-2"></i> Bookings
          </a>
          <a href="/" class="list-group-item list-group-item-action">
            <i class="fas fa-home me-2"></i> Back to Site
          </a>
        </div>
      </div>
    </div>
    
    <div class="col-lg-10">
      <% if (locals.addRoute) { %>
        <!-- Add Route Form -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">Add New Route</h2>
          <a href="/admin/routes" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Routes
          </a>
        </div>
        
        <div class="card">
          <div class="card-body">
            <form action="/admin/routes" method="POST" class="needs-validation" novalidate>
              <div class="row mb-3">
                <div class="col-md-6">
                  <label for="departureCity" class="form-label">Departure City</label>
                  <input type="text" class="form-control" id="departureCity" name="departureCity" required>
                  <div class="invalid-feedback">
                    Please enter departure city.
                  </div>
                </div>
                <div class="col-md-6">
                  <label for="arrivalCity" class="form-label">Arrival City</label>
                  <input type="text" class="form-control" id="arrivalCity" name="arrivalCity" required>
                  <div class="invalid-feedback">
                    Please enter arrival city.
                  </div>
                </div>
              </div>
              
              <div class="row mb-3">
                <div class="col-md-6">
                  <label for="distance" class="form-label">Distance (km)</label>
                  <input type="number" class="form-control" id="distance" name="distance" min="1" required>
                  <div class="invalid-feedback">
                    Please enter a valid distance.
                  </div>
                </div>
                <div class="col-md-6">
                  <label for="estimatedDuration" class="form-label">Estimated Duration (minutes)</label>
                  <input type="number" class="form-control" id="estimatedDuration" name="estimatedDuration" min="1" required>
                  <div class="invalid-feedback">
                    Please enter a valid duration.
                  </div>
                </div>
              </div>
              
              <div class="text-end">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save me-1"></i> Save Route
                </button>
              </div>
            </form>
          </div>
        </div>
      <% } else if (locals.editRoute) { %>
        <!-- Edit Route Form -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">Edit Route</h2>
          <a href="/admin/routes" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Routes
          </a>
        </div>
        
        <div class="card">
          <div class="card-body">
            <form action="/admin/routes/<%= route._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
              <div class="row mb-3">
                <div class="col-md-6">
                  <label for="departureCity" class="form-label">Departure City</label>
                  <input type="text" class="form-control" id="departureCity" name="departureCity" value="<%= route.departureCity %>" required>
                  <div class="invalid-feedback">
                    Please enter departure city.
                  </div>
                </div>
                <div class="col-md-6">
                  <label for="arrivalCity" class="form-label">Arrival City</label>
                  <input type="text" class="form-control" id="arrivalCity" name="arrivalCity" value="<%= route.arrivalCity %>" required>
                  <div class="invalid-feedback">
                    Please enter arrival city.
                  </div>
                </div>
              </div>
              
              <div class="row mb-3">
                <div class="col-md-6">
                  <label for="distance" class="form-label">Distance (km)</label>
                  <input type="number" class="form-control" id="distance" name="distance" value="<%= route.distance %>" min="1" required>
                  <div class="invalid-feedback">
                    Please enter a valid distance.
                  </div>
                </div>
                <div class="col-md-6">
                  <label for="estimatedDuration" class="form-label">Estimated Duration (minutes)</label>
                  <input type="number" class="form-control" id="estimatedDuration" name="estimatedDuration" value="<%= route.estimatedDuration %>" min="1" required>
                  <div class="invalid-feedback">
                    Please enter a valid duration.
                  </div>
                </div>
              </div>
              
              <div class="text-end">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save me-1"></i> Update Route
                </button>
              </div>
            </form>
          </div>
        </div>
      <% } else { %>
        <!-- Routes List -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">Manage Routes</h2>
          <a href="/admin/routes/add" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add New Route
          </a>
        </div>
        
        <div class="card">
          <div class="card-body">
            <% if (routes.length === 0) { %>
              <div class="text-center py-4">
                <p class="mb-0">No routes found. Please add a new route.</p>
              </div>
            <% } else { %>
              <div class="table-responsive">
                <table class="table table-hover align-middle">
                  <thead>
                    <tr>
                      <th>Departure City</th>
                      <th>Arrival City</th>
                      <th>Distance (km)</th>
                      <th>Duration</th>
                      <th>Created On</th>
                      <th class="text-end">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% routes.forEach(route => { %>
                      <tr>
                        <td><%= route.departureCity %></td>
                        <td><%= route.arrivalCity %></td>
                        <td><%= route.distance %></td>
                        <td>
                          <%= Math.floor(route.estimatedDuration / 60) %> hr 
                          <%= route.estimatedDuration % 60 %> min
                        </td>
                        <td><%= new Date(route.createdAt).toLocaleDateString() %></td>
                        <td class="text-end">
                          <a href="/admin/routes/<%= route._id %>" class="btn btn-sm btn-outline-primary me-1">
                            <i class="fas fa-edit"></i>
                          </a>
                          <form action="/admin/routes/<%= route._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this route?')">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
