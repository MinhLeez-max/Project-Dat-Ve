<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">Tìm Kiếm Xe</h2>
          
          <form action="/buses/search" method="POST" class="needs-validation" novalidate>
            <div class="row g-3">
              <div class="col-md-5">
                <label for="departureCity" class="form-label">Từ</label>
                <input type="text" class="form-control city-autocomplete" id="departureCity" name="departureCity" list="departureCities" placeholder="Điểm khởi hành" required>
                <datalist id="departureCities">
                  <% if(locals.departureCities) { %>
                    <% departureCities.forEach(city => { %>
                      <option value="<%= city %>">
                    <% }); %>
                  <% } %>
                </datalist>
                <div class="invalid-feedback">
                  Vui lòng chọn điểm khởi hành.
                </div>
              </div>
              
              <div class="col-md-5">
                <label for="arrivalCity" class="form-label">Đến</label>
                <input type="text" class="form-control city-autocomplete" id="arrivalCity" name="arrivalCity" list="arrivalCities" placeholder="Điểm đến" required>
                <datalist id="arrivalCities">
                  <% if(locals.arrivalCities) { %>
                    <% arrivalCities.forEach(city => { %>
                      <option value="<%= city %>">
                    <% }); %>
                  <% } %>
                </datalist>
                <div class="invalid-feedback">
                  Vui lòng chọn điểm đến.
                </div>
              </div>
              
              <div class="col-md-2">
                <label for="departureDate" class="form-label">Ngày</label>
                <input type="date" class="form-control datepicker" id="departureDate" name="departureDate" required>
                <div class="invalid-feedback">
                  Vui lòng chọn ngày.
                </div>
              </div>
            </div>
            
            <div class="text-center mt-4">
              <button type="submit" class="btn btn-primary btn-lg">Tìm Xe</button>
            </div>
          </form>
        </div>
      </div>
      
      <!-- Popular Routes Section -->
      <div class="mt-5">
        <h3 class="text-center mb-4">Tuyến Đường Phổ Biến</h3>
        <div class="row g-4">
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">Hà Nội - TP. Hồ Chí Minh</h5>
                <p class="card-text text-muted small">Giá từ 500.000 VNĐ</p>
                <button type="button" class="btn btn-sm btn-outline-primary mt-2" onclick="selectRoute('Hanoi', 'Ho Chi Minh City')">Chọn</button>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">Hà Nội - Đà Nẵng</h5>
                <p class="card-text text-muted small">Giá từ 350.000 VNĐ</p>
                <button type="button" class="btn btn-sm btn-outline-primary mt-2" onclick="selectRoute('Hanoi', 'Da Nang')">Chọn</button>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">TP. Hồ Chí Minh - Đà Lạt</h5>
                <p class="card-text text-muted small">Giá từ 200.000 VNĐ</p>
                <button type="button" class="btn btn-sm btn-outline-primary mt-2" onclick="selectRoute('Ho Chi Minh City', 'Da Lat')">Chọn</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function selectRoute(departure, arrival) {
    document.getElementById('departureCity').value = departure;
    document.getElementById('arrivalCity').value = arrival;
    
    // Set date to today if not already set
    const dateInput = document.getElementById('departureDate');
    if (!dateInput.value) {
      const today = new Date().toISOString().split('T')[0];
      dateInput.value = today;
    }
  }
</script>
